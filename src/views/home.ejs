<%- include('includes/header') %>
<%- include('includes/nav') %>


<div class="conatiner">
    <div class="row">
        <div class="col-2"></div>

        <div class="col-8">
            <div class="content">
                <h1 class="display-5 text-center">Olá <%= user.nome %>, Bem vindo! &#128522;</h1>
                <p class="text-center text-lead">Estes são os seus contatos! &#128071;</p>

                <%- include('includes/mensages') %>

                <% if(contatos.length > 0) { %>
                <div class="responsive-table">
                    <table class="table table-primary table-striped">
                        <thead>
                          <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Sobrenome</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Ações</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% contatos.forEach(contato => { %>
                            <tr>
                              <td scope="row"><%= contato.nome %></td>
                              <td scope="row"><%= contato.sobrenome %></td>
                              <td scope="row"><%= contato.email %></td>
                              <td scope="row"><%= contato.telefone %></td>
                              <td scope="row">
                                <a href="/contato/edit/<%= contato._id %>">
                                  <i class="fas fa-edit"></i>
                                </a>
                                <a href="/contato/delete/<%= contato._id %>" class="text-danger mx-2">
                                  <i class="fas fa-trash"></i>
                                </a>
                              </td>
                            </tr>
                          <% } )%>                       
                        </tbody>
                      </table>
                </div>
                <% } else { %>
                  <p class="text-center text-lead">Você não tem contatos salvo na sua agenda.</p>
                <% } %>
            </div>
        </div>

        <div class="col-2"></div>
    </div>
</div>

    
<%- include('includes/footer') %>
    
