<%- include('includes/header') %>
<%- include('includes/nav') %>

<div class="container">
<div class="row">
  <h1>Olá <%= user.nome %>, Bem vindo! &#128522;</h1>
  <p>Estes são os seus contatos! &#128071;</p>

  <div class="mensages">
    <%- include('includes/mensages') %>
  </div>
    
    <% if(contatos.length > 0) { %>
        <table>
            <thead>
              <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% contatos.forEach(contato => { %>
                <tr>
                  <td><%= contato.nome %></td>
                  <td><%= contato.sobrenome %></td>
                  <td><%= contato.email %></td>
                  <td><%= contato.telefone %></td>
                  <td>
                    <a href="/contato/edit/<%= contato._id %>">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="/contato/delete/<%= contato._id %>">
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
              <% } )%>                       
            </tbody>
          </table>

    <% } else { %>
      <p class="text-lead">Você não tem contatos salvo na sua agenda.</p>
    <% } %>
</div>
</div>

    
<%- include('includes/footer') %>
    
