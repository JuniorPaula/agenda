<%- include('includes/header') %>
<%- include('includes/nav') %>


<div class="login-page">

    <h1 class="heading">Editar contato!</h1>

    <div class="mensages">
        <%- include('includes/mensages') %>
    </div>

    <div class="row">   
        <form action="/contato/edit/<%= contato._id %>" method="post" class="form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group mt-3">
                <label for="nome">Nome:</label>
                <input type="text" value="<%= contato.nome %>" class="form-control" name="nome">
            </div>
            <div class="form-group mt-3">
                <label for="sobrenome">Sobrenome:</label>
                <input type="text" value="<%= contato.sobrenome %>" class="form-control" name="sobrenome">
            </div>
            <div class="form-group mt-3">
                <label for="email">E-mail:</label>
                <input type="email" value="<%= contato.email %>" class="form-control" name="email">
            </div>
            <div class="form-group mt-3">
                <label for="telefone">Telefone:</label>
                <input type="tel" value="<%= contato.telefone %>" class="form-control" name="telefone">
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary singin">Salvar</button>
            </div>
        </form>
    </div>

</div>

<%- include('includes/footer') %>
    